{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "out",
    "target": "ESNext",
    "lib": ["ESNext", "WebWorker"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "ignoreDeprecations": "6.0",
    "baseUrl": ".",
    "paths": {
      "#3rdparty/*": ["src/3rdparty/*"],
      "#/*": ["src/*"],
      "#tools/*": ["tools/*"]
    },
    "types": ["node", "bun-types"],
    "typeRoots": ["node_modules", "node_modules/@types"],
    "sourceMap": true,
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowUnreachableCode": true
  },
  "include": ["src/**/*.ts", "src/**/*.js", "tools/**/*.ts", "tools/**/*.js"],
  "exclude": ["node_modules", "<node_internals>/**"]
}
